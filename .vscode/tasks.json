{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "javac",
      "args": [
        "--module-path", "lib/javafx-sdk-24/lib",
        "--add-modules", "javafx.controls,javafx.fxml",
        "-d", "out",
        "${workspaceFolder}/src/**/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
